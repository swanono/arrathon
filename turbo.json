{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check": {
      "dependsOn": ["^type:check"]
    },
    "type:check": {
      "cache": true,
      "outputs": [],
      "dependsOn": []
    },
    "lint:check": {
      "cache": true,
      "outputs": [],
      "dependsOn": []
    },
    "format:check": {
      "cache": true,
      "outputs": [],
      "dependsOn": []
    }
  }
}
